datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator zod {
  provider       = "zod-prisma-types"
}

generator trpc {
  provider          = "prisma-trpc-generator"
  withZod           = true
  withMiddleware    = false
  withShield        = false
  contextPath       = "../src/context"
  trpcOptionsPath   = "../src/trpcOptions"
}

enum WeightUnit {
  kg
  stones
  pounds
}

model WeightEntry {
  id          Int        @id @default(autoincrement())
  date        DateTime   @default(now())
  weightKg    Int?       // Optional, as per your schema
  stones      Int?       // Changed to nullable to match optional behavior
  pounds      Int?       // Optional
  ounces      Int?       // Optional
  unit        WeightUnit @default(kg)
}